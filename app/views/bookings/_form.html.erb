<%= form_with(model: [room, booking]) do |f| %>

    <%= render "shared/errors", object: booking %>

    <%= f.label :booked_by %>
    <%= f.text_field :booked_by, autofocus: true %>
    
    <%= f.label :title %>
    <%= f.text_area :title %>  

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "(Optional)" %>

    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, {default: @upcoming_start_time, ampm: true, minute: [0, 15, 30, 45]}, {class: ""} %>

    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, {default: @upcoming_end_time, ampm: true, minute: [0, 15, 30, 45]}, {class: ""} %>

    <%= f.submit %>

<% end %>