<%= form_with(model: [room, booking]) do |f| %>

    <%= render "shared/errors", object: booking %>

    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>  

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "(Optional)" %>

    <%= f.label :booked_by %>
    <%= f.text_field :booked_by %>

    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, {default: booking.start_time, ampm: true, minute_step: 15}, {class: ""} %>

    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, {default: booking.end_time, ampm: true, minute_step: 15}, {class: ""} %>

    <%= f.submit %>

<% end %>